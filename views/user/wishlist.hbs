
{{>userHeader}}


<section class="product spad">
    <div class="container">
       
        <div class="row property__gallery">
           {{#if items}}
            {{#each items}}
            <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="img/productImages/{{this.product_id.image.[0]}}">
                      
                        <ul class="product__hover">
                            <li><a href="img/productImages/{{this.product_id.image.[0]}}" class="image-popup"><span class="arrow_expand"></span></a></li>
                             <li><a href="/deleteWishlistProduct/{{this.product_id._id}}"><span class="fas fa-trash"></span></a></li> 
                             
                            <li><a href="/addProductToCart/{{this.product_id._id}}"><span class="icon_bag_alt"></span></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="/">{{this.product_id.name}}</a></h6>
                        <div class="rating">
                            {{this.product_id.category}}
                        </div>
                        <div class="product__price">â‚¹{{this.product_id.price}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
            <!-- Pagination Controls -->
              <div class="pagination float-end">
          {{#if previousPage}}
          <a href="?page={{previousPage}}">Previous</a>
          {{/if}}

          {{#each (range totalPages)}}
          <a href="?page={{this}}" class="{{#if (eq this ../currentPage)}}active{{/if}}">{{this}}</a>
          {{/each}}

          {{#if nextPage}}
          <a href="?page={{previousPage}}">Next</a>
          {{/if}}
        </div>
        {{else}}
